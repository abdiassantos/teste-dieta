<!DOCTYPE html>
<html>
  <head>
    <title>TesteDieta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= nav_bar brand: "Dashboard", brand_link: root_url do %>
      <%= menu_group do %>
        <%= menu_item "Dieta", diets_path %>
        <%= menu_item "Criar nova dieta", new_diet_path %>
      <% end %>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
